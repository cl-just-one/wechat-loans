page {
  background-color: #F3F3F3;
}
.banner {
  width: 100%;
  height: 340rpx;
  display: block;
}
.block {
  background: #fff;
  margin-top: 15rpx;
}
.block-title {
  position: relative;
  font-size: 34rpx;
  line-height: 1.5;
  color: #2e5e86;
  padding: 10rpx 50rpx;
}
.block-title::after {
  position: absolute;
  left: 20rpx;
  top: 18rpx;
  content: "";
  width: 12rpx;
  height: 40rpx;
  background-color: #2e5e86;
}
.block-desc {
  display: block;
  color: #666;
  line-height: 1.6;
  font-size: 30rpx;
  padding: 0 30rpx 30rpx; 
}